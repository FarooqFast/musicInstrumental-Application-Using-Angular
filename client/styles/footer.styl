footer
	width: 50%;
	margin-top: 10px
	margin-left: auto;
	margin-right: auto;
	margin-bottom: 60px;
	text-align: center
	color: $footer-color
	font-size: 1.1em
	a
		color: $footer-color
		&:visited
			color: $footer-color
			text-decoration: none
		&:hover,
		&:active
			text-decoration: none
			cursor: pointer
			color: $footer-selection
	ul.social-links
		& > li
			margin-top: -10px
			font-size: 2em
			text-align: center
			display: inline-block
			padding-right: 5px
			padding-left: 5px